<h1><%#= first_name %> lists</h1>

<table>
  <tr>
    <th>Title</th>
    <th>User</th>
    <th>Item</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lists.each do |list| %>
    <%= list.title %>
  <% list.items.each do |item| %>
  <tr>
    <td><%= item.title %></td>
    <td><%= list.user_id %></td>
    <td><%#= list.item_id %></td>
    <td><%#= link_to 'Show', list %></td>
    <td><%#= link_to 'Edit', edit_list_path(list) %></td>
    <td><%#= link_to 'Destroy', list, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
<% end %>
</table>

