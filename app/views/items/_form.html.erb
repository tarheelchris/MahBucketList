<%= form_for(@item, :url => { :action => "create" }, :html => {:multipart => true}) do |f| %>


<h3><%= @current_user.lists.find(params[:list_id]).title %> Bucket List</h3>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :details %><br />
    <%= f.text_area :details %>
  </div>

  <p>
    <%= f.file_field :image %><br />
  </p>
  

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
